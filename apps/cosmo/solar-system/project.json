{
  "name": "cosmo-solar-system",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/cosmo/solar-system/src",
  "tags": ["type:app", "scope:cosmo"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/cosmo/solar-system",
        "configFile": "apps/cosmo/solar-system/vite.config.ts",
        "assets": [
          {
            "input": "assets/images/solar-system",
            "output": "public/images"
          }
        ]
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "cosmo-solar-system:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "cosmo-solar-system:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "cosmo-solar-system:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "cosmo-solar-system:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "cosmo-solar-system:build:development"
        },
        "production": {
          "buildTarget": "cosmo-solar-system:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/cosmo/solar-system/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/cosmo/solar-system/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
